{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      "allowJs": true, 
      "checkJs": false, 
      "strict": true, 
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
    ]
}
